.login-box
  .login-logo
    %a{href: root_path}
      %b> Log In
  .login-box-body
    %p.login-box-msg Sign in to start your session
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.text_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Email', type: 'email'
        %span.glyphicon.glyphicon-envelope.form-control-feedback

      .form-group.has-feedback
        = f.text_field :password, required: false, class: 'form-control', placeholder: 'Password', type: 'password'
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-8
          .checkbox.icheck
            %label
              = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
              Remember Me
        .col-xs-4
          %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Sign In
    = render "devise/shared/links"

:javascript
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
