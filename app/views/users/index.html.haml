.box
  .box-header
    %h3.box-title #{User.model_name.human(count: users.count)} #{ link_to I18n.t('add'), new_user_path, class: 'btn btn-default btn-xs btn-flat' }

  .box-body.table-responsive.no-padding
    %table.table.table-hover
      %tr
        %th= User.human_attribute_name(:name)
        %th= User.human_attribute_name(:email)
        %th= User.human_attribute_name(:locale)
        %th

      - users.each do |u|
        %tr
          %td= u.name
          %td= u.email
          %td= u.locale
          %td
            = link_to '', edit_user_path(u), class: 'glyphicon glyphicon-pencil index-icons'
