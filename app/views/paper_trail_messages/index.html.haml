.box
  .box-header
    %h3.box-title= I18n.t('messages.messages')

  .box-body.table-responsive.no-padding
    %table.table.table-hover
      %tr
        %th= I18n.t('messages.name')
        %th= I18n.t('messages.model')
        %th= I18n.t('messages.event')
        %th= I18n.t('messages.user')
        %th= I18n.t('messages.date')

      - paper_trail_messages.each do |ptm|
        %tr
          %td= resource_name(ptm)
          %td= ptm.item_type
          %td
            %span.label{class: event_class_label(ptm.event)}= ptm.event
          %td= User.find(ptm.whodunnit).name
          %td= formated_date(ptm.created_at)

= paginate paper_trail_messages