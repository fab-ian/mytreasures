%body
  %header.main-header
    %a.logo{:href => root_path}
      / LOGO
      My Treasures
    / Header Navbar: style can be found in header.less
    %nav.navbar.navbar-static-top{:role => "navigation"}
      %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
      / Navbar Right Menu
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li
            = link_to 'Add treasure', new_treasure_path

          = render 'layouts/menu_treasures'

          %li.dropdown.notifications-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-bell-o
              %span.label.label-warning 10
            %ul.dropdown-menu
              %li.header You have 10 notifications
              %li
                / inner menu: contains the actual data
                %ul.menu
                  %li
                    %a{:href => "#"}
                      %i.ion.ion-ios-people.info
                      Notification title
                  \...
              %li.footer
                %a{:href => "#"} View all
          / Tasks: style can be found in dropdown.less
          %li.dropdown.tasks-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-flag-o
              %span.label.label-danger 9
            %ul.dropdown-menu
              %li.header You have 9 tasks
              %li
                / inner menu: contains the actual data
                %ul.menu
                  %li
                    / Task item
                    %a{:href => "#"}
                      %h3
                        Design some buttons
                        %small.pull-right 20%
                      .progress.xs
                        .progress-bar.progress-bar-aqua{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
                          %span.sr-only 20% Complete
                  / end task item
                  \...
              %li.footer
                %a{:href => "#"} View all tasks
          / User Account: style can be found in dropdown.less
          - if user_signed_in?
            %li.dropdown.user.user-menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                / = image_tag(current_user.decorate.image, class: 'user-image', alt: 'User Image')
                %span.hidden-xs= current_user.email
              %ul.dropdown-menu
                / User image
                %li.user-header
                  / = image_tag(current_user.decorate.image, class: 'img-circle', alt: 'User Image')
                  %p
                    #{current_user.email} - Web Developer
                    %small Member since Nov. 2012
                / Menu Body
                %li.user-body
                  .col-xs-4.text-center
                    %a{:href => "#"} Followers
                  .col-xs-4.text-center
                    %a{:href => "#"} Sales
                  .col-xs-4.text-center
                    %a{:href => "#"} Friends
                / Menu Footer
                %li.user-footer
                  .pull-left
                    = link_to 'Profile', edit_user_registration_path, class: 'btn btn-default btn-flat'
                  .pull-right
                    = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
